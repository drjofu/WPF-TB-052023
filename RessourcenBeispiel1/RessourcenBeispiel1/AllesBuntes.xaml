<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  
  <Color x:Key="PrimaryColor">#FFE20808</Color>
  <SolidColorBrush x:Key="Brush1" Color="{DynamicResource PrimaryColor}"/>
  <Color x:Key="SecondaryColor">#FFFFF61D</Color>
  <SolidColorBrush x:Key="Brush2" Color="{DynamicResource SecondaryColor}"/>
  <LinearGradientBrush x:Key="Brush3" EndPoint="0.5,1" StartPoint="0.5,0">
    <GradientStop Color="{DynamicResource PrimaryColor}"/>
    <GradientStop Color="{DynamicResource SecondaryColor}" Offset="1"/>
  </LinearGradientBrush>

</ResourceDictionary>