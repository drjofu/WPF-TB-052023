<Window x:Class="RoutedEventsBeispiel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutedEventsBeispiel"
        mc:Ignorable="d"
        MouseDown="MouseDownHandler"
        PreviewMouseDown="PreviewMouseDownHandler"
        Title="MainWindow" Height="450" Width="800">
  <Grid MouseDown="MouseDownHandler" PreviewMouseDown="PreviewMouseDownHandler" >
    <Button MouseDown="MouseDownHandler" PreviewMouseDown="PreviewMouseDownHandler" HorizontalAlignment="Left" Margin="48,62,0,0" VerticalAlignment="Top" >
      <StackPanel Orientation="Horizontal" MouseDown="MouseDownHandler" PreviewMouseDown="PreviewMouseDownHandler">
        <Ellipse Width="50" Height="50" Fill="Orange" MouseDown="MouseDownHandler" PreviewMouseDown="PreviewMouseDownHandler"/>
        <TextBlock Text="Hallo Welt" VerticalAlignment="Center" Margin="10,0" MouseDown="MouseDownHandler" PreviewMouseDown="PreviewMouseDownHandler"/>
      </StackPanel>
    </Button>

  </Grid>
</Window>
