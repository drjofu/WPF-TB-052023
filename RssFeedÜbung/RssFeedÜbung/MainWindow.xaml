<Window x:Class="RssFeedÜbung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RssFeedÜbung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="23*"/>
      <RowDefinition Height="52*"/>
      <RowDefinition Height="42*"/>
      <RowDefinition Height="100*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="349*"/>
      <ColumnDefinition Width="28*"/>
      <ColumnDefinition Width="423*"/>
    </Grid.ColumnDefinitions>

    <TextBlock Text="{Binding Title.Text}" FontSize="30" HorizontalAlignment="Center" Grid.ColumnSpan="99" FontWeight="Bold" />
    <Image Source="{Binding ImageUrl}" Grid.Row="1" Width="200"/>
  </Grid>
</Window>
                                                                                                                        