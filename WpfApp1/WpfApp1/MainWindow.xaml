<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontSize="30"
        Title="MainWindow" Height="450" Width="800">
  <Canvas>
    <Button Content="Hallo Welt" Canvas.Left="50" Canvas.Top="10"/>
    <Button  Canvas.Left="30" Canvas.Top="100" FontSize="20">
      <StackPanel Orientation="Horizontal">
        <Ellipse Width="50" Height="50" Fill="Orange" Margin="5 10 20 40"/>
        <TextBlock Text="Hallo Button"/>
        <Ellipse Width="50" Height="50" >
          <Ellipse.Fill>
            <ImageBrush ImageSource="koala.jpg"/>
          </Ellipse.Fill>
        </Ellipse>
      </StackPanel>
    </Button>

  </Canvas>
</Window>
